BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        id: control_box
        size_hint_x: 0.4
        Label:
            text: 'Sort by:'
            font_size: 18
        Button:
            id: switch_button
            text: 'Visited'
            font_size: 18
            on_press: app.switch_sort()
        Label:
            text: 'Add New Place...'
            font_size: 18
        Label:
            text: 'Name:'
            font_size: 18
        TextInput:
            id: name_input
            font_size: 18
        Label:
            text: 'Country:'
            font_size: 18
        TextInput:
            id: country_input
            font_size: 18
        Label:
            text: 'Priority:'
            font_size: 18
        TextInput:
            id: priority_input
            font_size: 18
        Button:
            id: add_button
            text: 'Add Place'
            font_size: 18
        Button:
            id: clear_button
            text: 'Clear'
            font_size: 18
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                id: to_visit_label
                text: 'Places to visit 0'
                font_size: 18
        BoxLayout:
            orientation: 'vertical'
            id: location_box
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                id: visited_label
                text: 'Big'
                font_size: 18
