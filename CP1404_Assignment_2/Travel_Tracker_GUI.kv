BoxLayout:
    orientation: 'horizontal'
    BoxLayout
        orientation: 'vertical'
        size_hint_x: 0.4
        Label:
            text: 'Sort by:'
            font_size: 15
        Button:
            id: switch_button
            text: 'Visited'
            font_size: 15
            on_press: app.switch_sort()
        Label:
            text: 'Add New Place...'
            font_size: 15
        Label:
            text: 'Name:'
            font_size: 15
        TextInput:
            id: name_input
            text: ''
            font_size: 15
        Label:
            text: 'Country:'
            font_size: 15
        TextInput:
            id: country_input
            text: ''
            font_size: 15
        Label:
            text: 'Priority:'
            font_size: 15
        TextInput:
            id: priority_input
            text: ''
            font_size: 15
        Button:
            id: add_button
            text: 'Add Place'
            font_size: 15
            size_hint_y: 1.3
            on_press: app.add_place(name_input.text, country_input.text, priority_input.text)
        Button:
            id: clear_button
            text: 'Clear'
            font_size: 15
            size_hint_y: 1.3
            on_press: app.clear_inputs()
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                id: places_label
                text: 'Places to visit 0'
                font_size: 15
        BoxLayout:
            orientation: 'vertical'
            id: location_box
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                id: visited_label
                text: 'Welcome to Travel Tracker 2.0'
                font_size: 15
